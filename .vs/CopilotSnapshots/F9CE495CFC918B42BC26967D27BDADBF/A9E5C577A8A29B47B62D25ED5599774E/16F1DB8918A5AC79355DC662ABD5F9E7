@using SupermercadoCRUD2.Models.Dto
@model VentaDto

@{
    ViewData["Title"] = "Eliminar Venta";
}

<div class="contenedor">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-warning">
        <h4>¿Está seguro que desea eliminar esta venta?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Producto</dt>
                <dd class="col-sm-9">@Model.Producto</dd>

                <dt class="col-sm-3">Cantidad</dt>
                <dd class="col-sm-9">@Model.Cantidad</dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

                <dt class="col-sm-3">Subtotal</dt>
                <dd class="col-sm-9"><strong>@Model.Subtotal.ToString("C")</strong></dd>

                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
