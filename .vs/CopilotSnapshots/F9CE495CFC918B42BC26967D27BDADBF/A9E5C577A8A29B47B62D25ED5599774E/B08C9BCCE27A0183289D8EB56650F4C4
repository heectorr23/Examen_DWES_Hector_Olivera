-- Script para crear la base de datos y tabla de ventas
-- Base de datos: ventas
-- Usuario: root
-- Contraseña: curso

create database ventas;
use ventas;

drop table if exists venta;
create table venta(
id_venta int primary key auto_increment,
producto varchar(50),
cantidad int,
precio decimal(6,2)
);

insert into venta values
(1, 'Camiseta Roja', 5, 12.50),
(2, 'Zapatillas Negras', 1, 45.00),
(3, 'Gorra Blanca', 6, 10.00),
(4, 'Pantalon Gris', 2, 30.00),
(5, 'Sudadera Azul', 3, 25.00),
(6, 'Zapatillas Negras', 3, 45.00),
(7, 'Camiseta Roja', 4, 12.50),
(8, 'Pantalon Gris', 1, 30.00),
(9, 'Zapatillas Negras', 2, 45.00),
(10, 'Camiseta Roja', 2, 12.50),
(11, 'Gorra Blanca', 4, 10.00),
(12, 'Pantalon Gris', 3, 30.00),
(13, 'Sudadera Azul', 1, 25.00),
(14, 'Zapatillas Negras', 2, 45.00);

-- Verificar que se crearon los datos
SELECT * FROM venta;
