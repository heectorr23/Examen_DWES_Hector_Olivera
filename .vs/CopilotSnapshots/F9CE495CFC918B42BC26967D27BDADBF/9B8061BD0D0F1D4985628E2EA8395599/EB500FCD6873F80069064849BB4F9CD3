@using SupermercadoCRUD2.Models.Dto
@model IEnumerable<VentaDto>

@{
    ViewData["Title"] = "Listado de Ventas";
}

<div class="contenedor">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensaje"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Añadir Nueva Venta
        </a>

        <form asp-action="Index" method="get" class="d-flex" style="width: 400px;">
            <input type="text" 
                   name="filtroProducto" 
                   class="form-control me-2" 
                   placeholder="Filtrar por producto..." 
                   value="@ViewBag.FiltroProducto" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Filtrar
            </button>
            @if (!string.IsNullOrWhiteSpace(ViewBag.FiltroProducto))
            {
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Limpiar
                </a>
            }
        </form>
    </div>

    <table class="table table-striped tabla-clientes">
        <thead>
            <tr>
                <th>ID</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var venta in Model)
                {
                    <tr>
                        <td>@venta.Id</td>
                        <td>@venta.Producto</td>
                        <td>@venta.Cantidad</td>
                        <td>@venta.Precio.ToString("C")</td>
                        <td><strong>@venta.Subtotal.ToString("C")</strong></td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@venta.Id">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">
                        @if (!string.IsNullOrWhiteSpace(ViewBag.FiltroProducto))
                        {
                            <span>No se encontraron ventas del producto "@ViewBag.FiltroProducto"</span>
                        }
                        else
                        {
                            <span>No hay ventas registradas</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
