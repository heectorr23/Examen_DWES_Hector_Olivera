@using SupermercadoCRUD2.Models.Dto
@model VentaDto

@{
    ViewData["Title"] = "Registrar Nueva Venta";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    
    <div asp-validation-summary="ModelOnly" style="color: red;"></div>

    <div>
        <label asp-for="Producto">Producto</label>
        <input asp-for="Producto" placeholder="Nombre del producto" maxlength="50" />
        <span asp-validation-for="Producto" style="color: red;"></span>
    </div>

    <div>
        <label asp-for="Cantidad">Cantidad</label>
        <input asp-for="Cantidad" type="number" min="1" placeholder="Cantidad a vender" />
        <span asp-validation-for="Cantidad" style="color: red;"></span>
    </div>

    <div>
        <label asp-for="Precio">Precio Unitario</label>
        <input asp-for="Precio" type="number" step="0.01" min="0.01" max="9999.99" placeholder="Precio por unidad" />
        <span asp-validation-for="Precio" style="color: red;"></span>
    </div>

    <div>
        <button type="submit">Guardar Venta</button>
        <a asp-action="Index">Volver al Listado</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
