@using SupermercadoCRUD2.Models.Dto
@model IEnumerable<VentaDto>

@{
    ViewData["Title"] = "Listado de Ventas";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Mensaje"] != null)
{
    <p style="color: green;"><strong>@TempData["Mensaje"]</strong></p>
}

@if (TempData["Error"] != null)
{
    <p style="color: red;"><strong>@TempData["Error"]</strong></p>
}

<p>
    <a asp-action="Create">Añadir Nueva Venta</a>
</p>

<form asp-action="Index" method="get">
    <label>Filtrar por producto:</label>
    <input type="text" 
           name="filtroProducto" 
           placeholder="Nombre del producto..." 
           value="@ViewBag.FiltroProducto" />
    <button type="submit">Filtrar</button>
    @if (!string.IsNullOrWhiteSpace(ViewBag.FiltroProducto))
    {
        <a asp-action="Index">Limpiar filtro</a>
    }
</form>

<br />

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Subtotal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var venta in Model)
            {
                <tr>
                    <td>@venta.Id</td>
                    <td>@venta.Producto</td>
                    <td>@venta.Cantidad</td>
                    <td>@venta.Precio.ToString("C")</td>
                    <td><strong>@venta.Subtotal.ToString("C")</strong></td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@venta.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" style="text-align: center;">
                    @if (!string.IsNullOrWhiteSpace(ViewBag.FiltroProducto))
                    {
                        <span>No se encontraron ventas del producto "@ViewBag.FiltroProducto"</span>
                    }
                    else
                    {
                        <span>No hay ventas registradas</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
