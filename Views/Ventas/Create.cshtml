@using SupermercadoCRUD2.Models.Dto
@model VentaDto

@{
    ViewData["Title"] = "Registrar Nueva Venta";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    
    <div asp-validation-summary="ModelOnly" style="color: red;"></div>

    <div>
        <label asp-for="Producto">Producto:</label><br />
        <input asp-for="Producto" placeholder="Nombre del producto" maxlength="50" required />
        <span asp-validation-for="Producto" style="color: red;"></span>
    </div>
    <br />

    <div>
        <label asp-for="Cantidad">Cantidad:</label><br />
        <input asp-for="Cantidad" type="number" min="1" placeholder="Cantidad a vender" required />
        <span asp-validation-for="Cantidad" style="color: red;"></span>
    </div>
    <br />

    <div>
        <label asp-for="Precio">Precio Unitario:</label><br />
        <input asp-for="Precio" type="number" step="0.01" min="0.01" max="9999.99" placeholder="Precio por unidad" required />
        <span asp-validation-for="Precio" style="color: red;"></span>
    </div>
    <br />

    <div>
        <button type="submit">Guardar Venta</button>
        <a asp-action="Index">Volver al Listado</a>
    </div>
</form>
